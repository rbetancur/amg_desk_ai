# ============================================
# Configuración del Agente AI
# ============================================
# Copia este archivo a .env y completa con tus valores reales
# IMPORTANTE: Nunca subas el archivo .env al repositorio

# ============================================
# Supabase Configuration (REQUERIDO)
# ============================================
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================
# Backend FastAPI Configuration (REQUERIDO)
# ============================================
BACKEND_URL=http://localhost:8000
API_SECRET_KEY=your_api_secret_key_here

# ============================================
# Gemini AI Configuration (REQUERIDO)
# ============================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.2
GEMINI_MAX_TOKENS=500

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO

# ============================================
# Retry Configuration
# ============================================
MAX_RETRIES=3
RETRY_DELAY=2.0

# ============================================
# Rate Limiting Configuration
# ============================================
# Para deshabilitar rate limiting durante pruebas, establece ENABLE_RATE_LIMITING=false
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_USER=5
RATE_LIMIT_WINDOW_HOURS=24
# MAX_REQUEST_AGE_HOURS=  # Opcional: horas máximas de antigüedad para procesar (dejar vacío = sin límite)

# ============================================
# Validation Configuration
# ============================================
MIN_DESCRIPTION_LENGTH=10
MAX_DESCRIPTION_LENGTH=4000

# ============================================
# Security Filters Configuration
# ============================================
ENABLE_SECURITY_FILTERS=true
PROMPT_INJECTION_KEYWORDS=ignore,actúa,ejecuta,revela,bypass,override,ignora,ejecutar,revelar
DANGEROUS_INSTRUCTION_PATTERNS=debes hacer,necesito que hagas,por favor ejecuta,debes,necesitas,tienes que
# MALICIOUS_CONTENT_KEYWORDS=  # Opcional: palabras clave adicionales de contenido malicioso

# ============================================
# Prompt Optimization Configuration
# ============================================
USE_FEW_SHOT_ALWAYS=false
FEW_SHOT_THRESHOLD_DESCRIPTION_LENGTH=20
